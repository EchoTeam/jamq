%%% -*- erlang -*-
%%% vim: set ts=4 sts=4 sw=4 et:

{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{deps_dir, "deps"}.

{deps, [
    % let it always be the first
    {lager, "2.0.0",
        {git, "https://github.com/EchoTeam/lager", "6ee1113ec0d8cd9dde4feacf1e1bade749f35057"}}
]}.
